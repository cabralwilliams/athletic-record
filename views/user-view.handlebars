<div class="flex-column align-items-center">
    <h2 class="secondary-header">{{ userData.username }}'s Page</h2>
    <div class="flex-row">
        <div class="margin-right-small">
            <h3 class="tertiary-header">{{ userData.username }}'s' Activities</h3>
            {{#each userData.activities }}
                {{> simple-stats }}
            {{/each}}
        </div>
        {{#if loggedIn}}
            <div>
                {{#if areFollowing }}
                    <div class="flex-column">
                        <h3 class="tertiary-header">You're a follower!</h3>
                        <div class="margin-bottom-tiny">
                            <form id="stopFollowingForm">
                                <input type="hidden" id="follower_id" name="follower_id" value="{{follower_id}}" />
                                <button class="site-btn-1" type="submit">Stop Following</button>
                            </form>
                        </div>
                    </div>
                {{else}}
                    <div class="flex-column">
                        <h3 class="tertiary-header">You're not following!</h3>
                        <div class="margin-bottom-tiny">
                            <form id="startFollowingForm">
                                <input type="hidden" id="follower_id" name="follower_id" value="{{follower_id}}" />
                                <button class="site-btn-1" type="submit">Start Following</button>
                            </form>
                        </div>
                    </div>
                {{/if}}
            </div>
        {{else}}
            <div class="flex-column">
                <h3 class="tertiary-header">Login to start following {{userData.username}}!</h3>
            </div>
        {{/if}}
    </div>
</div>
{{#if loggedIn}}
    {{#if areFollowing}}
        <script src="/javascript/stopFollowing.js"></script>
    {{else}}
        <script src="/javascript/startFollowing.js"></script>
    {{/if}}
{{/if}}